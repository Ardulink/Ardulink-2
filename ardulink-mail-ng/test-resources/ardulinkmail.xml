<routes xmlns="http://camel.apache.org/schema/spring">
	<route>
		<from uri="imap://receiver@someReceiverDomain.com?username=loginId1&amp;password=secret1&amp;host=${imaphost}&amp;port=${imapport}&amp;folderName=INBOX&amp;delete=true&amp;consumer.delay=600000&amp;unseen=true"/>
		<to uri="ardulink://mock?scenario.${commandname}=${command}&amp;validfroms=valid.sender@someSenderDomain.com"/>
		<setHeader headerName="to">
			<simple>${in.header.from}</simple>
		</setHeader>
		<setHeader headerName="from">
			<simple>${in.header.to}</simple>
		</setHeader>
		<to uri="smtp://${smtphost}:${smtpport}?username=loginId1&amp;password=secret1"/>
	</route>
</routes>
