{
  "extends": ["config:recommended"],
  "pruneStaleBranches": true,
  "docker-compose": {
    "fileMatch": [
      "^deploy-dist/tests/docker-compose\\.yml$"
    ]
  },
  "labels": ["dependencies"],

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false
    },
    {
      "matchPackageNames": ["org.junit:junit-bom"],
      "allowedVersions": "<6.0.0"
    },
    {
      "matchPackageNames": ["com.pi4j:pi4j-core"],
      "allowedVersions": "<3.0.0"
    },
    {
      "matchPackagePatterns": ["^org\\.apache\\.camel"],
      "allowedVersions": "<4.0.0"
    },
    {
      "matchPackageNames": ["nl.jqno.equalsverifier"],
      "allowedVersions": "<4.0.0"
    },
    {
      "matchPackageNames": ["io.rest-assured:rest-assured"],
      "allowedVersions": "<6.0.0"
    }
  ]
}
